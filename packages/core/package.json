{
  "name": "@ping-me/core",
  "version": "1.0.0",
  "description": "Framework-agnostic ping logic for keeping backends alive",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ping",
    "uptime",
    "monitor",
    "keep-alive"
  ],
  "author": "Reshank Maharaj",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "isomorphic-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
