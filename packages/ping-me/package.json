{
  "name": "ping-me",
  "version": "1.0.0",
  "description": "Keep your free tier backends alive with auto-pinging and monitoring",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "ping-me": "./dist/cli.js",
    "keep-server-alive": "./dist/cli.js", 
    "keepwake": "./dist/cli.js",
    "keepawake": "./dist/cli.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "ping",
    "uptime",
    "monitor",
    "keep-alive",
    "free-tier",
    "backend",
    "server",
    "keepwake",
    "keep-server-alive",
    "keepawake"
  ],
  "author": "Eshank Tyagi",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@ping-me/core": "workspace:*",
    "node-fetch": "^3.3.2",
    "commander": "^11.1.0"
  },
  "optionalDependencies": {
    "@ping-me/express": "workspace:*",
    "@ping-me/next": "workspace:*",
    "@ping-me/fastify": "workspace:*",
    "@ping-me/koa": "workspace:*",
    "@ping-me/hono": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mreshank/ping-me.git",
    "directory": "packages/ping-me"
  },
  "bugs": {
    "url": "https://github.com/mreshank/ping-me/issues"
  },
  "homepage": "https://github.com/mreshank/ping-me#readme"
} 