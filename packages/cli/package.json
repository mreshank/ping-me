{
  "name": "@ping-me/cli",
  "version": "1.0.0",
  "description": "CLI tool for ping-me",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ping-me": "dist/index.js"
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts",
    "dev": "tsup src/index.ts --format cjs --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ping",
    "cli",
    "uptime",
    "monitor"
  ],
  "author": "Eshank Tyagi",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.16",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
} 