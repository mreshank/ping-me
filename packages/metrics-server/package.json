{
  "name": "@ping-me/metrics-server",
  "version": "1.0.0",
  "description": "Metrics server for ping-me",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ping",
    "metrics",
    "server",
    "monitor"
  ],
  "author": "Eshank Tyagi",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express-rate-limit": "^7.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.0",
    "tsx": "^4.19.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
} 