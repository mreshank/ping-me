{
  "name": "@ping-me/next",
  "version": "1.0.0",
  "description": "Next.js adapter for ping-me",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ping",
    "next",
    "nextjs",
    "uptime",
    "monitor"
  ],
  "author": "Reshank Maharaj",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@ping-me/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/react": "^18.2.66",
    "next": "^14.1.3",
    "react": "^18.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "next": ">=12.0.0",
    "react": ">=17.0.0"
  }
} 