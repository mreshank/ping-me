{
  "name": "@ping-me/koa",
  "version": "1.0.0",
  "description": "Koa adapter for ping-me",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ping",
    "koa",
    "uptime",
    "monitor"
  ],
  "author": "Eshank Tyagi",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@ping-me/core": "workspace:*",
    "koa": "^2.14.2",
    "koa-router": "^12.0.1"
  },
  "devDependencies": {
    "@types/koa": "^2.13.12",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "koa": ">=2.0.0",
    "koa-router": ">=10.0.0"
  }
} 